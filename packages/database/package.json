{
	"dependencies": {
		"@paralleldrive/cuid2": "^3.1.0",
		"@prisma/adapter-pg": "^6.19.0",
		"@prisma/client": "7.1.0",
		"@repo/config": "workspace:*",
		"@sindresorhus/slugify": "^2.2.1",
		"nanoid": "^5.1.5",
		"pg": "^8.16.0",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.5",
		"@faker-js/faker": "^10.3.0",
		"@repo/tsconfig": "workspace:*",
		"@types/node": "24.10.1",
		"@vitest/coverage-v8": "^4.0.18",
		"dotenv-cli": "^11.0.0",
		"prisma": "7.1.0",
		"prisma-zod-generator": "2.1.2",
		"vitest": "^4.0.18"
	},
	"main": "./index.ts",
	"name": "@repo/database",
	"scripts": {
		"generate": "dotenv -c -e ../../.env -- prisma generate --no-hints && node fix-zod-import.js",
		"push": "dotenv -c -e ../../.env -- prisma db push",
		"migrate": "dotenv -c -e ../../.env -- prisma migrate dev",
		"studio": "dotenv -c -e ../../.env -- prisma studio",
		"type-check": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"seed-templates": "dotenv -c -e ../../.env -- npx tsx seed-additional-templates.ts"
	},
	"types": "./**/.tsx",
	"version": "0.0.0"
}
